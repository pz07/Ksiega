<html>
<head>
  <title>KSIĘGA</title>
  <%= stylesheet_link_tag 'style' %>
  <%= stylesheet_link_tag 'openid' %>
  <%= stylesheet_link_tag 'yui/fonts-min'%>
  <%= stylesheet_link_tag 'jquery-ui'%>

  <%= javascript_include_tag 'jquery-1.8.3'%>
  <%= javascript_include_tag 'openid-jquery'%>

  <script>
	jQuery.noConflict();
  </script>
  
  <style>
    .menu_link a{
      color: white;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <table style="width: 100%; height: 100%;">
    <tr style="vertical-align: top;">
      <td style="width: 20%; background-color: black; color: white; padding: 10px;" class="menu_link">
		<% if !current_user %>
			<div>
				Welcome to the personal finace controlling application.				
			</div>
			<br/>
			<div>
				Choose your account provider on the right side of the page. If you don't have an account, it will be created at fist login.
			</div>
	  	<% else %>
			<div>
				<%= link_to "Dodaj transakcje", :controller => "trans", :action => "new" %>
			</div>
			<div>
				<%= link_to "Uaktualnij stan konta", :controller => "trans", :action => "update_cash_form" %>
			</div>
			<div>
				<%= link_to "Import wyciągu", :controller => "statement" %>
			</div>
			<br>
			<div>
				<%= link_to "Statystyki", :controller => "stats", :action => "all" %>
			</div>
			<br>
			<div>
				<%= link_to "Konta", :controller => "account", :action => "list" %>
			</div>
			<div>
				<%= link_to "Kategorie wydatków", :controller => "category", :action => "list" %>
			</div>
			<div>
				<%= link_to "Szukaj", :controller => "trans", :action => "search" %>
			</div>
			<br>
			<div>
				<%= link_to "Logout", logout_path %>
			</div>		  
		  <% end %>
	  <td>
      <td style="vertical-align: top;">
		<%= @content_for_layout %>
      <td>
      <td>

      <td>
    </tr>
  </table>
</body>
</html>
